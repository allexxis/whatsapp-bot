  },
  "devDependencies": {
    "@hapi/boom": "^10.0.1",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "eslint": "^9.2.0",
    "chokidar": "^3.6.0",
    "npm-run-all2": "^6.1.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.2",
    "qrcode-terminal": "^0.12.0"
  },
  "engines": {
    "node": "22.x"
  }
}
